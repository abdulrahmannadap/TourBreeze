@model IEnumerable<Countrie>
@* @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
} *@

<h1>Index</h1>

<p>
    <a asp-area="Admin" asp-controller="Cointries" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Countries)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.States)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Citys)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PinCodes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Countries)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.States)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Citys)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PinCodes)
            </td>
            <td>
                    <a asp-area="Admin" asp-controller="Cointries" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-area="Admin" asp-controller="Cointries" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-area="Admin" asp-controller="Cointries" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
